
<div class="signup-form">
<div class="form">
<h2>Sign up</h2>
<%= form_with model: @user, url: signup_path do |f| %>
  <%= render partial: "shared/form_errors", locals: {object: f.object} %>

  <div>
    <%= f.text_field :name, required: true, class:"inputfield first", placeholder: "Name" %>
  </div>

  <div>
    <%= f.email_field :email, required: true, class:"inputfield", placeholder: "E-mail" %>
  </div>

  <div>
    <%= f.password_field :password, required: true, class:"inputfield", placeholder: "Password" %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, required: true, class:"inputfield", placeholder: "Password confirmation" %>
  </div>

  <%= f.submit "Create account", id: "submit" %>
<% end %>
<%= link_to "Already have an account? Log in", login_path, class:"login" %>
</div>
</div>