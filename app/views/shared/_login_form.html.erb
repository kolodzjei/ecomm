<div class="login-form">
<div class="form">
<%= form_with url: login_path, scope: :user do |f| %>
  <div>
    <%= f.email_field :email, required: true, class:"inputfield", placeholder: "E-mail" %>
  </div>

  <div class="separate">
    <%= f.password_field :password, required: true, class:"inputfield", placeholder: "Password" %>
  </div>

  <div>
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
  </div>


  <%= f.submit "Log in", id: "submit" %>
<% end %>
<%= link_to "Forgot password?", new_password_path, class:"forgot" %>
<div class="separate-line"><hr></div>
<div class="cont">
  <%= link_to "Create new account", signup_path, class:"new-acc" %>
</div>
</div>
</div>