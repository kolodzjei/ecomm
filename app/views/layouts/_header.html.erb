<header class="navbar navbar-fixed-top navbar-inverse">

  <div class="container">
    <%= link_to "Ecomm", root_path, id: "logo" %>
    <nav>

    <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <% if logged_in? %>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
          <li><%= link_to "Cart", '#' %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <% if admin? %>
              <li><%= link_to "Products panel", products_path %></li>
              <% end %>
              <li><%= link_to "Profile", profile_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
      </ul>
      <% else %>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
      </ul>
      <% end %>
    </nav>
  </div>

</header>

