<div class="my-form">
  <div class="form">
    <%= form_with url: login_path, scope: :user do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, required: true, class: "form-control inputfield", placeholder: "E-mail" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, required: true, class: "form-control inputfield", placeholder: "Password" %>
      </div>

      <div class="mb-3 form-check">
        <%= f.label :remember_me, class: "form-check-label" do %>
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <span class="ms-2">Remember me on this computer</span>
        <% end %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary", id: "submit" %>
    <% end %>

    <%= link_to "Forgot password?", new_password_path, style: "color: black; text-decoration:none;" %>
    <div class="separate-line"><hr></div>
    <div class="cont">
      <%= link_to "Create new account", signup_path, style: "color: black; text-decoration:none;" %>
    </div>
  </div>
</div>
