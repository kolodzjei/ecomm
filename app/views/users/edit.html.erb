<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Edit Profile</h2>
        <%= form_with model: @user, url: profile_path, method: :put do |f| %>
          <%= render partial: "shared/form_errors", locals: { object: f.object } %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Current email", class: "form-label" %>
            <%= f.text_field :email, disabled: true, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :unconfirmed_email, "New Email", class: "form-label" %>
            <%= f.text_field :unconfirmed_email, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Password (leave blank if you don't want to change it)", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <hr/>
          <div class="mb-3">
            <%= f.label :current_password, "Current password (we need your current password to confirm your changes)", class: "form-label" %>
            <%= f.password_field :current_password, required: true, class: "form-control" %>
          </div>

          <%= f.submit "Update Account", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Orders</h2>
      <% if !@orders.nil? %>
        <% @orders.each do |order| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= link_to "Order ##{order.id}", order_path(order), class: "card-link text-dark" %></h5>
              <p class="card-text mb-0">
                <%= "Status: #{order.status}" %>
              </p>
              <p class="card-text">
                <%= "Total: $#{order.total}" %>
              </p>
            </div>
          </div>
        <% end %>
        <%== pagy_bootstrap_nav(@pagy) %>
        <% else %>
        <p class="text-muted">No orders yet.</p>
      <% end %>
    </div>
  </div>
</div>
</div>
