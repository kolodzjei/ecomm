<div class="row">
  <div class="col-md-4">
    <%= form_for @category, scope: :category do |f| %>
      <%= render partial: "shared/form_errors", locals: {object: f.object} %>
    
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>