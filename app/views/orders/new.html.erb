<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Order Summary</h2>
      <% @cart.items.each do |item| %>
        <div class="row cart-item">
          <div class="col-md-4">
            <%= image_tag "",alt: item.product.name ,class: "cart-item-image" %>
          </div>
          <div class="col-md-8">
            <h4><%= item.product.name %></h4>
            <p>Price: <%= item.product.price %></p>
            <p>Quantity: <%= item.quantity %></p>
          </div>
        </div>
      <% end %>
      <hr>
      <p>Subtotal: <%= number_to_currency(@cart.subtotal) %></p>
    </div>
    <div class="col-md-4">
      <h2>Shipping Address</h2>
      <%= form_for @order, url: orders_path do |form| %>

        <div class="form-group">
          <%= form.label :shipping_name, "Name" %>
          <%= form.text_field :shipping_name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :shipping_address_line_1, "Address Line 1" %>
          <%= form.text_field :shipping_address_line_1, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :shipping_address_line_2, "Address Line 2" %>
          <%= form.text_field :shipping_address_line_2, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :shipping_city, "City" %>
          <%= form.text_field :shipping_city, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :shipping_zipcode, "Zipcode" %>
          <%= form.text_field :shipping_zipcode, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :shipping_country, "Country" %>
          <%= form.text_field :shipping_country, class: "form-control", required: true %>
        </div>
  
        <%= form.submit "Place Order", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>