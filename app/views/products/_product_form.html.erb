<div class="product-form">
<div class="form">
<%= form_with model: @product do |f| %>
  <%= render 'shared/form_errors', object: f.object%>


<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :price %>
<%= f.number_field :price, step: :any %>

<%= f.submit yield(:button_text) %>
<% end %>
</div>
</div>