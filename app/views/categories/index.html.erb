<h1>Categories</h1>

<%= link_to "New", new_category_path, class: "btn btn-success" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to edit_category_path(category), class: "btn btn-warning" do %>
            Edit
          <% end %>
          <%= link_to category_path(category), data: {"turbo-method": :delete, turbo_confirm: "You sure?"}, class: "btn btn-danger" do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    <%== pagy_bootstrap_nav (@pagy) %>
</table>